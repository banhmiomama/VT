<script>
    var UserDetailID;
    $(document).ready(function () {
        UserDetailID = @ViewBag.UserID;
        LoadDataUpdateUser();
    });

    function LoadDataUpdateUser() {
        $.ajax({
            type: 'GET',
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            url: "/Admin/UserDetail/GetUserDetail/" + UserDetailID,
            async: true,
            success: function (data) {
                let DataComboEmployee = data.Table1;
                let DataComboBranch = data.Table2;
                let DataComboGroup = data.Table3;
                let DataDetail = data.LoadDetail;
                LoadCombo(DataComboEmployee, "cbbEmployee");
                LoadCombo(DataComboBranch, "cbbBranch");
                LoadCombo(DataComboGroup, "cbbGroup");
                if (DataDetail.length != 0) {
                    $("#Employee").dropdown("refresh");
                    $("#Employee").dropdown("set selected", DataDetail[0].EmployeeID);
                    $("#Branch").dropdown("refresh");
                    $("#Branch").dropdown("set selected", DataDetail[0].BranchID);
                    $("#Group").dropdown("refresh");
                    $("#Group").dropdown("set selected", DataDetail[0].GroupID);
                    $('#txtName').val((DataDetail[0].Name));
                    $('#txtUsername').val((DataDetail[0].Username)); 
                    $('#txtAreaBranch').val((DataDetail[0].AreaBranch));
                    $('#txtNote').val((DataDetail[0].Note));
                }
            }
        });
    }

    function ExcuteData() {
        debugger
        var data = new Object();
        data.Name = $('#txtName').val() ? $('#txtName').val() : "";
        data.EmployeeID = $('#Employee').dropdown('get value') ? ($('#Employee').dropdown('get value')) : "";
        data.BranchID = $('#Branch').dropdown('get value') ? ($('#Branch').dropdown('get value')) : "";
        data.GroupID = $('#Group').dropdown('get value') ? ($('#Group').dropdown('get value')) : "";
        data.Username = $('#txtUsername').val() ? $('#txtUsername').val() : "";
        //data.Password = $('#txtPassword').val() ? $('#txtPassword').val() : "";
        data.Note = $('#txtNote').val() ? $('#txtNote').val() : "";
        data.AreaBranch = $('#txtAreaBranch').val() ? $('#txtAreaBranch').val() : "";
        //data.Description = $('#txtDes').val() ? $('#txtDes').val() : "";
         $('#form3').form('validate form');
         if ($('#form3').form('is valid')) {
             $.ajax({
                 url: "/Admin/UserDetail/Execute",
                 dataType: "json",
                 type: "POST",
                 data: {
                     __RequestVerificationToken: token
                     , UserID: @ViewBag.UserID
                     , data: JSON.stringify(data)
                 },
                 async: true,
                 error: function (XMLHttpRequest, textStatus, errorThrown) {
                        notiError("Lỗi Hệ Thống");
                 },
                 success: function (result) {
                     if (result == "0") {
                         notiSuccess();
                         LoadUser();
                     } else {
                         notiError("Người Dùng Đã Tồn Tại Vui Lòng Kiểm Tra Lại");
                        }
                 }
             })
             $('#divDetailPopup').modal('hide');
            }
         return false;
    }
</script>
